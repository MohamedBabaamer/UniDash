rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ğŸ” Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ğŸ“š Courses Collection
    match /courses/{courseId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }
    
    // ğŸ’° Payments Collection
    match /payments/{paymentId} {
      allow read: if isSignedIn() && 
        (resource.data.studentId == request.auth.uid || isAdmin());
      
      allow create, update, delete: if isAdmin();
    }
    
    // ğŸ‘¤ Users Collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      
      allow update: if isAdmin();
      
      allow delete: if isAdmin();
    }
    
    // ğŸ“ Resources Collection (top-level)
    match /resources/{resourceId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    // ğŸ”¢ Counters Collection (sequence numbers, course codes)
    // NOTE: create/delete remains admin-only. Updates are allowed for any signed-in user
    // so the UI can perform transactional increments when creating resources/series.
    // This is permissive â€” if you need stricter guarantees, consider a Cloud Function
    // to perform counter increments or add field-level increment checks here.
    match /counters/{counterId} {
      // Reading counters is allowed for signed-in users (used to display sequence info)
      allow read: if isSignedIn();
      // Creation and deletion of counter documents requires admin privileges
      allow create, delete: if isAdmin();
      // Allow signed-in users to update counters (increments during transactions)
      allow update: if isSignedIn();
    }
    
    // ğŸ“Š Exams Collection (top-level)
    match /exams/{examId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }
    
    // ğŸ“‹ Series Collection (TD/TP/Exam exercises)
    match /series/{seriesId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }
    // âš™ï¸ Settings Collection (global configurations)
    match /settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }  }
}